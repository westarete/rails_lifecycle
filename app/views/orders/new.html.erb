<h2>Create a new order</h2>

<%= form_for @order do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :po_number %>
    <%= f.text_field :po_number %>
  </div>

  <div>
    <%= f.label :terms %>
    <%= f.text_field :terms %>
  </div>

  <%= f.submit %>

<% end %>